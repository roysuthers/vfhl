            "level":"INFO"
        },
        "clsHockeyPool":{
            "handlers":["fileHandler"],
            "level":"INFO"
        },
        "injuries":{
            "handlers":["fileHandler"],
            "level":"INFO"
        },
        "clsNHL_API":{
            "handlers":["fileHandler"],
            "level":"INFO"
        },
        "clsFantrax":{
